{
  "expo": {
    "name": "eigenfood",
    "slug": "eigenfood",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hackdavis.eigenfood",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow this app to access your location so we can show nearby grocery options.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow this app to access your location even in the background to keep recommendations up to date.",
        "UIBackgroundModes": [
          "location"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "react-native-permissions",
        {
          "locationWhenInUse": "Location is used to find grocery stores and restaurants near you"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b46c1c39-b8a9-40c5-85df-0dc23bcc4f79"
      }
    }
  }
}
